<?xml version="1.0" encoding="utf-8" ?> 
<shortcuts xmlns:android="http://schemas.android.com/apk/res/android">
  <shortcut
    android:shortcutId="favorites"
    android:enabled="true"
    android:icon="@drawable/ic_sc_favorite"
    android:shortcutShortLabel="@string/sc_favorites"
    android:shortcutLongLabel="@string/sc_favorites"
    android:shortcutDisabledMessage="@string/sc_favorites">
    <intent
      android:action="android.intent.action.VIEW"
      android:targetPackage="com.adenearnshaw.StaticShortcutsSample"
      android:targetClass="com.adenearnshaw.StaticShortcutsSample.SplashActivity"
      android:data="stc://staticshortcuts/favorites" />
    <!-- If your shortcut is associated with multiple intents, include them
         here. The last intent in the list is what the user sees when they
         launch this shortcut. -->
    <categories android:name="android.shortcut.conversation" />
  </shortcut>
  <!-- Specify more shortcuts here. -->
</shortcuts>